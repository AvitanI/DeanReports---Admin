@model DeanReports.ViewModels.StatisticsViewModel
@{
    ViewBag.Title = "איזור אישי";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section mainContent{
    <div class="row">
        <div class="blockWrapper rowItem">
            <div class="block borderTopBlue">
                <div class="blockTitle"></div>
                <div class="circle" id="circles-1"></div>
            </div>
        </div>
        <div class="blockWrapper rowItem">
            <div class="block borderTopGreen">
                <div class="blockTitle"></div>
                <div class="circle" id="circles-2"></div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="row">
        <div class="blockWrapper rowItem">
            <div class="block borderTopRed">
                <div class="blockTitle"></div>
                <div class="circle" id="circles-3"></div>
            </div>
        </div>
        <div class="blockWrapper rowItem">
            <div class="block borderTopYellow">
                <div class="blockTitle"></div>
                <div class="circle" id="circles-4"></div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
}
    
@section statJS{
    <script type="text/javascript">
        var circles = [
            { id: 'circles-1', value: 50, maxValue: 100, colors: ['#84cffa', '#3c8dbc'] },
            { id: 'circles-2', value: 50, maxValue: 100, colors: ['#6ef8b9', '#00a65a'] },
            { id: 'circles-3', value: 50, maxValue: 100, colors: ['#f0bcb6', '#dd4b39'] },
            { id: 'circles-4', value: 50, maxValue: 100, colors: ['#f8c678', '#f39c12'] },
        ];

        for (var i = 0; i < circles.length; i++) {
            Circles.create({
                id: circles[i].id,
                radius: 60,
                value: circles[i].value,
                maxValue: circles[i].maxValue,
                width: 10,
                text: function (value) { return value + '%'; },
                colors: circles[i].colors,
                duration: 400,
                wrpClass: 'circles-wrp',
                textClass: 'circles-text',
                valueStrokeClass: 'circles-valueStroke',
                maxValueStrokeClass: 'circles-maxValueStroke',
                styleWrapper: true,
                styleText: true
            });
        }
    </script>
}
