@model DeanReports.ViewModels.SessionViewModel
@{
    ViewBag.Title = "יצירת פגישה חדשה";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section mainContent {
    <div class="blockWrapper" style="width:100%;">
        <div class="block borderTopBlue">
            <div class="blockTitle">
                פרטי פגישה
            </div>
            <form action="/Teacher/CreateNewSession" method="post" class="formWrapper">
                <input type="hidden" name="RefundID" value="@Model.RefundID" />
                <input type="hidden" name="IsGrouped" value="@Convert.ToString(Model.IsGrouped)" />
                <div class="sessionWrapper">
                    <div class="inputWrapper">
                        <input id="birth" type="text" name="Date" placeholder="תאריך" class="loginInputs" value="" />
                        <i class="fa fa-calendar inputsIcons" aria-hidden="true"></i>
                        <div class="clear"></div>
                    </div>
                    <div class="inputWrapper">
                        <input id="startHour" type="text" name="StartHour" placeholder="שעת התחלה" class="loginInputs" value="" />
                        <i class="fa fa-clock-o inputsIcons" aria-hidden="true"></i>
                        <div class="clear"></div>
                    </div>
                    <div class="inputWrapper">
                        <input id="endHour" type="text" name="EndHour" placeholder="שעת סיום" class="loginInputs" value="" />
                        <i class="fa fa-clock-o inputsIcons" aria-hidden="true"></i>
                        <div class="clear"></div>
                    </div>
                    <div class="inputWrapper">
                        <input id="sumHours" type="text" placeholder="סהכ שעות" class="loginInputs" value="" disabled />
                        <i class="fa fa-hourglass inputsIcons" aria-hidden="true"></i>
                        <div class="clear"></div>
                    </div>
                    <div class="inputWrapper">
                        <input type="text" name="Details" placeholder="הערות" class="loginInputs" value="" />
                        <i class="fa fa-sticky-note-o inputsIcons" aria-hidden="true"></i>
                        <div class="clear"></div>
                    </div>
                    <div class="inputWrapper">
                        @if (Model.IsGrouped)
                        {
                            <select name="Students" class="membersMessages" multiple="multiple"></select>
                        }
                        else
                        {
                            <select name="StudentUserName" class="membersMessages"></select>
                        }
                        <i class="fa fa-user inputsIcons" aria-hidden="true"></i>
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="updateSubmitWraspper">
                    <input type="submit" name="submit" value="שלח טופס" class="updateSubmit" />
                </div>
            </form>
        </div>
    </div>
}

