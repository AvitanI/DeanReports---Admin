@model DeanReports.ViewModels.RefundViewModel
@{
    ViewBag.Title = "יצירת טופס חונכות";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section mainContent {
    <div class="blockWrapper" style="width:100%;">
    <div class="block borderTopBlue">
        <div class="blockTitle">
            פרטי חונכות
        </div>
        <form action="/Teacher/CreateNewRefund" method="post" class="formWrapper">
            <div class="requestedCourses">
                <div class="refundWrapper">
                    <label for="" id="" name="" class="requestLbl">שם החוג</label>
                    <select id="refundDepartment" name="SelectedDepartment" class="jungoSelect2">
                        @foreach (var department in Model.DepartmentsCombo)
                        {
                            <option value="@department.ID">@department.Name</option>
                        }
                    </select>
                    <label for="" id="" name="" class="requestLbl">שם הקורס</label>
                    <select id="refundCourses" name="SelectedCourses" class="jungoSelect2"></select>
                    <label for="" id="" name="" class="requestLbl">שם המרצה</label>
                    <input type="text" id="" name="LecturerName" class="requestInputs" />
                    <label>סוג טופס:</label>
                    <select name="IsGrouped">
                        <option value="false">יחיד</option>
                        <option value="true">קבוצתי</option>
                    </select>
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="updateSubmitWraspper">
                <input type="submit" name="submit" value="שלח בקשה" class="updateSubmit" />
            </div>
        </form>
    </div>
</div>
}

