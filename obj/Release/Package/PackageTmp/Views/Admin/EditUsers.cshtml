@model DeanReports.ViewModels.ReportsViewModel
@{
    ViewBag.Title = "עריכת";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section mainContent {
    <div class="usersTabWrapper">
        <h2 class="tableTitle">(תוצאות @Model.Users.Count()) טופס משתמשים</h2>
        <div class="tableWrap engtable">
            <div class="tableHeaderWrap">
                <div class="tr">
                    <div class="td">שם משתמש</div>
                    <div class="td">שם חניך</div>
                    <div class="td">ת"ז חניך</div>
                    <div class="td">תאריך יצירה</div>
                    <div class="td">סוג משתמש</div>
                    <div class="td">חוג</div>
                    <div class="td">שנה</div>
                    <div class="td">ת.לידה</div>
                    <div class="td">טלפון</div>
                    <div class="td">מין</div>
                    <div class="td">פעיל</div>
                </div>
            </div>
            <div class="tableItemWrap">
                @foreach (var item in Model.Users)
                {
                    <a href="/Admin/EditUserByID?Username=@item.MemberUserName" class="tr noUndLn">
                            <div class="td">@item.UserName</div>
                            <div class="td">@item.MemberFullName</div>
                            <div class="td">@item.Identity</div>
                            <div class="td">@item.CreatedDate</div>
                            <div class="td">@item.Type</div>
                            <div class="td">@item.DepartmentName</div>
                            <div class="td">@item.Year</div>
                            <div class="td">@item.Birth.ToString("dd/MM/yyyy")</div>
                            <div class="td">@item.Phone</div>
                            <div class="td">@item.Gender</div>
                            <div class="td">
                                @if (item.IsActive)
                                {
                                    <span class="label label-success">פעיל</span>
                                }
                                else
                                {
                                    <span class="label label-danger">לא פעיל</span>
                                }
                            </div>
                    </a>
                }
            </div>
        </div>
    </div>
}
